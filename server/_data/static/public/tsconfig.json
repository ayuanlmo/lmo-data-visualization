{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "newLine": "crlf"
  },
  "include": [
    "templates",
    "scripts",
    "global.d.ts"
  ],
  "exclude": [
    "*.js"
  ]
}
